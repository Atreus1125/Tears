<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@mipmap/long_mao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:id="@+id/actionButton"
            android:text="开始转换"
            android:textStyle="bold"
            android:background="@drawable/button_click"
            android:fontFamily="@font/font_zh"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"/>
    <Button
            android:id="@+id/listButton"
            android:text="免费歌曲"
            android:textStyle="bold"
            android:fontFamily="@font/font_zh"
            android:background="@drawable/button_click"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/actionButton"
            android:layout_marginTop="16dp"
            android:layout_marginRight="40dp"
            app:layout_constraintEnd_toEndOf="@+id/helpImageButton"/>
    <Button
            android:id="@+id/vipListButton"
            android:text="付费歌曲"
            android:textStyle="bold"
            android:fontFamily="@font/font_zh"
            android:background="@drawable/button_click"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/actionButton"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="40dp"
            app:layout_constraintStart_toStartOf="@+id/helpImageButton"/>
    <ProgressBar
            android:id="@+id/waitProgressBar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@+id/actionButton"
            app:layout_constraintBottom_toBottomOf="@+id/infoTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/infoTextView"
            android:text="使用前请务必点击查看下方帮助指南\n推荐使用系统默认字体\n\nAuthor: Atreus"
            android:fontFamily="@font/font_en"
            android:textColor="#000000"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/actionButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:id="@+id/helpImageButton"
            android:src="@mipmap/help"
            android:scaleType="centerCrop"
            android:background="#00000000"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@+id/infoTextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>